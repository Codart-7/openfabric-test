<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


  <!-- ############################################################ -->
  <!--   DBMS SPECIFIC SETUP   -->
  <!-- ############################################################ -->
  <property name="uuid_type" value="CHAR(36)" dbms="postgresql"/>
  <property name="uuid_function" value="uuid_generate_v4()" dbms="postgresql"/>


  <!-- ############################################################ -->
  <!--  WorkerPort  -->
  <!-- ############################################################ -->
  <changeSet id="createWorkerPortsTable" author="Michael">
    <createTable tableName="worker_ports">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="ip" type="varchar(255)"/>
      <column name="private_port" type="INT"/>
      <column name="public_port" type="INT"/>
      <column name="type" type="varchar(255)"/>
    </createTable>
  </changeSet>
</databaseChangeLog>